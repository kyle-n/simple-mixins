{
  "name": "typed-mixins",
  "version": "1.0.0",
  "description": "TypeScript mixins made easy",
  "main": "dist/mixin.js",
  "type": "commonjs",
  "scripts": {
    "compile": "tsc -p build/tsconfig.json",
    "test": "jest -c tests/jest.config.js",
    "prepare": "husky install && npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyle-n/simple-mixins.git"
  },
  "keywords": ["typescript", "mixin", "mixins", "typed"],
  "author": "Kyle Nazario",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kyle-n/simple-mixins/issues"
  },
  "homepage": "https://github.com/kyle-n/simple-mixins#readme",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.1",
    "husky": "^7.0.2",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "src/*": "prettier --config build/.prettierrc.json --write --ignore-unknown",
    "tests/*": "prettier --config build/.prettierrc.json --write --ignore-unknown"
  },
  "files": [
    "dist/*"
  ]
}
